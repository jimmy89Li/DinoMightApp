<Alloy>
	<Window class="container">
		<View id="topMenu">
			<View class="topButton" onClick="infoPage">
				<ImageView class="topImage" image="info.jpg"></ImageView>
			</View>
			<View class="topButton" onClick="videoPage">
				<ImageView class="topImage" image="video.png"></ImageView>
			</View>
			<View class="topButtonActive" onClick="exercisePage">
				<ImageView class="topImage" image="exercise.png"></ImageView>
			</View>
			<View class="topButton" onClick="statisticsPage">
				<ImageView class="topImage" image="graph.png"></ImageView>
			</View>
		</View>
		<View class="content">
			<View class="header">
				<ImageView image="exercise.png"></ImageView>
				<Label class="pageName">INCONTINENCE EXERCISES</Label>
			</View>
			<Label class="title">Current level: Niagara Falls</Label>
			<Label class="subtitle">210 exercises left for next level.</Label>
			<ImageView class="vids" image="time.png"></ImageView>
			<Button class="proceedBtn">Proceed</Button>
			<Label class="title">Dailly challenge progress:</Label>
			<ImageView class="vids" image="progress.png"></ImageView>
		</View>
	</Window>
</Alloy>